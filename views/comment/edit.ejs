<%- include("../partials/header") %>
<div class="container" style="width:35%;margin:25px auto;">
    <h3 style="text-align: center;">Edit comment</h3>
    <form action="/tarot/<%= tarot_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="commentText">Comment</label>
            <input type="text" class="form-control" name="comment[text]" value= "<%= comment.text %>" >
        </div>  
        <button type="submit" class="btn btn-outline-primary" style="float: right;">Confirm</button>
  </form>
</div>  
